{
  "name": "marketplace-api",
  "version": "1.0.0",
  "description": "NestJS API for marketplace data simulation",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "build:with-lint": "npm run lint && npm run build",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "lint:all": "npm run lint && npm run prettier:check",
    "prettier:check": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch --config jest.config.ts",
    "test:cov": "jest --coverage --config jest.config.ts",
    "test:ci": "jest --ci --runInBand --config jest.config.ts",
    "verify": "npm run lint && npm run test && npm audit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent-runtime": "^3.787.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.1.4",
    "arima": "^0.2.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.5.0",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.6",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
